{
  "version": 2,
  "builds": [
    {
      "src": "server/index.mjs",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.mjs"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
